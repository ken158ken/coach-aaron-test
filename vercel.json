{
  "buildCommand": "cd backend && npm install && npm run build && cd ../frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist/client",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/server" },
    { "source": "/(.*)", "destination": "/api/ssr" }
  ],
  "functions": {
    "api/server.js": {
      "maxDuration": 10,
      "includeFiles": "backend/dist/**"
    },
    "api/ssr.js": {
      "maxDuration": 10,
      "includeFiles": "frontend/dist/**"
    }
  }
}
