{
  "buildCommand": "cd frontend && npm install && npm run build && cd .. && node build.js && cd backend && npm install && npm run build && cd ..",
  "outputDirectory": ".vercel_build_output",
  "functions": {
    "api/server.js": {
      "includeFiles": "backend/dist/**"
    },
    "api/ssr.js": {
      "includeFiles": ".vercel_build_output/server/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/server"
    },
    {
      "source": "/:path*",
      "destination": "/api/ssr"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
