{
  "buildCommand": "cd frontend && npm ci && npm run build && cd .. && node build.js && cd backend && npm ci",
  "outputDirectory": ".vercel_build_output",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/server"
    },
    {
      "source": "/:path*",
      "destination": "/api/ssr"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
